<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalsEventHandler">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView

                android:id="@+id/btnCat"
                style="@style/CardView.elevate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:foreground="@drawable/ripple_light">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/bubble"
                    android:gravity="bottom"
                    android:text="Cat"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:id="@+id/btnElephant"
                style="@style/CardView.elevate"
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:foreground="@drawable/ripple_light">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/bubble"
                    android:gravity="bottom"
                    android:text="Eleph."
                    android:textColor="@color/white"
                    android:textSize="40dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView

                android:id="@+id/btnFox"
                style="@style/CardView.elevate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:foreground="@drawable/ripple_light">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/bubble"
                    android:gravity="bottom"
                    android:text="Fox"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:id="@+id/btnGiraffe"
                style="@style/CardView.elevate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:foreground="@drawable/ripple_light">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/bubble"
                    android:gravity="bottom"
                    android:text="Giraf."
                    android:textColor="@color/white"
                    android:textSize="50dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView

                android:id="@+id/btnParrot"
                style="@style/CardView.elevate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:foreground="@drawable/ripple_light">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/bubble"
                    android:gravity="bottom"
                    android:text="Parrot"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:id="@+id/btnTiger"
                style="@style/CardView.elevate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:foreground="@drawable/ripple_light">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/bubble"
                    android:gravity="bottom"
                    android:text="Tiger"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <androidx.cardview.widget.CardView

                android:id="@+id/btnZebra"
                style="@style/CardView.elevate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:foreground="@drawable/ripple_light">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/bubble"
                    android:gravity="bottom"
                    android:text="Zebra"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

            </androidx.cardview.widget.CardView>








        </LinearLayout>

    </LinearLayout>

</ScrollView>